<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:gravity="center_vertical|center_horizontal"
        android:id="@+id/parentLayout">


    <Button
            android:text="Reset Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="7dp"
            android:onClick="resetGame" android:enabled="false"/>
    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                 app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                 android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                 android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
                 android:id="@+id/tableLayout1">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:layout_width="40pt"
                    android:layout_marginRight="3pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:onClick="buttonClicked" android:id="@+id/button1"
                    android:textColor="@android:color/black"/>
            <Button
                    android:layout_width="40pt"
                    android:layout_marginRight="3pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button2" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
            <Button
                    android:layout_width="40pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button3" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:layout_width="40pt"
                    android:layout_marginRight="3pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button4" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
            <Button
                    android:layout_width="40pt"
                    android:layout_marginRight="3pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button5" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
            <Button
                    android:layout_width="40pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button6" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:layout_width="40pt"
                    android:layout_marginRight="3pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button7" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
            <Button
                    android:layout_width="40pt"
                    android:layout_marginRight="3pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button8" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
            <Button
                    android:layout_width="40pt"
                    android:textSize="50dp"
                    android:layout_height="40pt" android:id="@+id/button9" android:onClick="buttonClicked"
                    android:textColor="@android:color/black"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>